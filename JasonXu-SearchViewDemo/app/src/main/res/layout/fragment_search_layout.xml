<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_margin="10dp"
        android:clickable="true"
        android:background="@drawable/fragment_search_fly_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="歌手分类"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/ic_launcher"
            android:drawableStart="@mipmap/ic_launcher"
            android:drawableRight="@mipmap/ic_launcher"
            android:drawableEnd="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <TextView
        android:text="热门搜索"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/app_gray_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.jasonxu.searchviewdemo.View.FlowLayout.TagFlowLayout
        android:id="@+id/tag_flow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:gravity="@string/gravity_left">
    </com.jasonxu.searchviewdemo.View.FlowLayout.TagFlowLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_gray_line"/>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="0dp"
        android:divider="@android:color/transparent"
        android:listSelector="@drawable/listview_selector">
    </ListView>
</LinearLayout>